void printOnMatrix(byte b[])
{
  for(int i=0; i<8; i++)
  {
    digitalWrite(rows[i], HIGH);
    for(int j=0; j<8; j++)
    {
      digitalWrite(col[j], (~b[i] >> j) & 0x01);
      digitalWrite(col[j], 1);
    }
    digitalWrite(rows[i], LOW);
  }
}


